{
	"$schema": "https://json.schemastore.org/prettierrc.json",
	"trailingComma": "all",
	"tabWidth": 4,
	"useTabs": true,
	"semi": true,
	"singleQuote": false,
	"bracketSpacing": true,
	"printWidth": 100,
	"endOfLine": "lf",
	"overrides": [
		{
			"files": "*.{yml,yaml}",
			"options": {
				"tabWidth": 2
			}
		}
	]
}
